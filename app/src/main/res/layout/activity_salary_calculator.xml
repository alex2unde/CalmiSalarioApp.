<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0EDED"
    tools:context=".SalaryCalculatorActivity">


    <!-- TARJETA DE TÍTULO PRINCIPAL -->
    <androidx.cardview.widget.CardView
        android:id="@+id/titleCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/white"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingStart="48dp"
            android:paddingTop="16dp"
            android:paddingEnd="48dp"
            android:paddingBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="sans-serif-black"
                android:text="@string/calcular_nmi_salario_nbodega"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:textStyle="bold"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <ScrollView
        android:id="@+id/main"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toTopOf="@+id/bottom_navigation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleCard">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <!-- GRUPO HABERES -->
            <View
                android:id="@+id/backgroundHaberes"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/background_card"
                android:elevation="5dp"
                android:paddingBottom="16dp"
                app:layout_constraintBottom_toBottomOf="@+id/containerHoras50"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- CINTA DE LA ESQUINA PARA HABERES (NUEVO METODO) -->

            <View
                android:id="@+id/ribbon_background"
                android:layout_width="220dp"
                android:layout_height="52dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="-87dp"
                android:background="@color/azul"
                android:elevation="9dp"
                android:rotation="45"
                app:layout_constraintEnd_toEndOf="@id/backgroundHaberes"
                app:layout_constraintTop_toTopOf="@id/backgroundHaberes" />

            <TextView
                android:id="@+id/ribbon_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="9dp"
                android:gravity="center"
                android:paddingEnd="35dp"
                android:paddingBottom="35dp"
                android:text="Haberes"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/ribbon_background"
                app:layout_constraintEnd_toEndOf="@+id/ribbon_background"
                app:layout_constraintStart_toStartOf="@+id/ribbon_background"
                app:layout_constraintTop_toTopOf="@+id/ribbon_background" />



            <!-- FILA PARA CATEGORIA Y ANTIGUEDAD -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/containerCategoria"
                android:layout_width="111dp"
                android:layout_height="37dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:elevation="8dp"
                app:layout_constraintEnd_toStartOf="@+id/containerAntiguedad"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toStartOf="@id/backgroundHaberes"
                app:layout_constraintTop_toTopOf="@id/backgroundHaberes">

                <TextView
                    android:id="@+id/txtCategoria"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:elevation="8dp"
                    android:text="@string/categoria"
                    android:textColor="@android:color/black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <Spinner
                    android:id="@+id/spCategoria"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:elevation="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/txtCategoria" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/containerAntiguedad"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:elevation="10dp"
                app:layout_constraintEnd_toEndOf="@id/backgroundHaberes"
                app:layout_constraintStart_toEndOf="@+id/containerCategoria"
                app:layout_constraintTop_toTopOf="@+id/containerCategoria">

                <TextView
                    android:id="@+id/txtAntiguedad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:elevation="8dp"
                    android:text="@string/antiguedad"
                    android:textColor="@android:color/black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <Spinner
                    android:id="@+id/spAntiguedad"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:elevation="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/txtAntiguedad" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- FILA PARA LAS PREGUNTAS (TÍTULO Y MES COMPLETO) -->
            <TextView
                android:id="@+id/txtPreguntaTitulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:elevation="8dp"
                android:text="@string/pregunta_titulo"
                android:textColor="@android:color/black"
                app:layout_constraintStart_toStartOf="@+id/containerCategoria"
                app:layout_constraintTop_toBottomOf="@+id/containerCategoria" />

            <RadioGroup
                android:id="@+id/rgTitulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="8dp"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="@id/txtPreguntaTitulo"
                app:layout_constraintTop_toBottomOf="@id/txtPreguntaTitulo">

                <RadioButton
                    android:id="@+id/rbTituloSi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:elevation="8dp"
                    android:text="@string/si"
                    android:textColor="@android:color/black"
                    style="@style/App.Custom.RadioButton"/>

                <RadioButton
                    android:id="@+id/rbTituloNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:elevation="8dp"
                    android:text="@string/no"
                    android:textColor="@android:color/black"
                    style="@style/App.Custom.RadioButton"/>
            </RadioGroup>

            <TextView
                android:id="@+id/txtPreguntaMesCompleto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="8dp"
                android:text="@string/pregunta_mes_completo"
                android:textColor="@android:color/black"
                app:layout_constraintBottom_toTopOf="@+id/rgMesCompleto"
                app:layout_constraintStart_toStartOf="@+id/rgMesCompleto"
                app:layout_constraintTop_toTopOf="@+id/txtPreguntaTitulo" />

            <RadioGroup
                android:id="@+id/rgMesCompleto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:elevation="8dp"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="@+id/rgTitulo"
                app:layout_constraintStart_toEndOf="@+id/rgTitulo"
                app:layout_constraintTop_toTopOf="@+id/rgTitulo">

                <RadioButton
                    android:id="@+id/rbMesCompletoSi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:elevation="8dp"
                    android:text="@string/si"
                    android:textColor="@android:color/black"
                    style="@style/App.Custom.RadioButton"/>

                <RadioButton
                    android:id="@+id/rbMesCompletoNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:elevation="8dp"
                    android:text="@string/no"
                    android:textColor="@android:color/black"
                    style="@style/App.Custom.RadioButton"/>
            </RadioGroup>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/containerHoras50"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                android:elevation="8dp"
                app:layout_constraintEnd_toStartOf="@+id/containerHoras100"
                app:layout_constraintHorizontal_chainStyle="spread"
                app:layout_constraintStart_toStartOf="@id/backgroundHaberes"
                app:layout_constraintTop_toBottomOf="@+id/rgTitulo">

                <TextView
                    android:id="@+id/txtHorasExtra50"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:elevation="8dp"
                    android:text="@string/Horas_extra_al_50"
                    android:textColor="@android:color/black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/etHorasExtra50"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="0"
                    android:inputType="number"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txtHorasExtra50" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/containerHoras100"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:elevation="8dp"
                app:layout_constraintEnd_toEndOf="@+id/containerAntiguedad"
                app:layout_constraintStart_toEndOf="@+id/containerHoras50"
                app:layout_constraintTop_toBottomOf="@+id/rgMesCompleto">

                <TextView
                    android:id="@+id/txtHorasExtra100"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:elevation="8dp"
                    android:text="@string/Horas_extra_al_100"
                    android:textColor="@android:color/black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/etHorasExtra100"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="0"
                    android:inputType="number"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txtHorasExtra100" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- GRUPO DESCUENTOS -->
            <View
                android:id="@+id/backgroundDescuentos"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/background_card"
                android:elevation="3dp"
                android:paddingBottom="16dp"
                app:layout_constraintBottom_toBottomOf="@+id/etViatico"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/backgroundHaberes" />

            <!-- CINTA DE LA ESQUINA PARA DESCUENTOS -->
            <View
                android:id="@+id/ribbon_background_desc"
                android:layout_width="220dp"
                android:layout_height="50dp"
                android:layout_marginTop="-10dp"
                android:layout_marginEnd="-70dp"
                android:background="@color/rojoclaro"
                android:elevation="4dp"
                android:rotation="45"
                app:layout_constraintEnd_toEndOf="@id/backgroundDescuentos"
                app:layout_constraintTop_toTopOf="@id/backgroundDescuentos" />

            <TextView
                android:id="@+id/ribbon_text_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="7dp"
                android:text="Desc."
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/ribbon_background_desc"
                app:layout_constraintEnd_toEndOf="@+id/ribbon_background_desc"
                app:layout_constraintStart_toStartOf="@+id/ribbon_background_desc"
                app:layout_constraintTop_toTopOf="@+id/ribbon_background_desc" />

            <TextView
                android:id="@+id/txtViatico"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:elevation="5dp"
                android:text= "@string/Adelanto"
                android:textColor="@android:color/black"
                app:layout_constraintStart_toStartOf="@id/backgroundDescuentos"
                app:layout_constraintTop_toTopOf="@id/backgroundDescuentos" />


            <EditText
                android:id="@+id/etViatico"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:elevation="3dp"
                android:hint="0"
                android:inputType="number"
                app:layout_constraintEnd_toEndOf="@id/backgroundDescuentos"
                app:layout_constraintStart_toStartOf="@id/txtViatico"
                app:layout_constraintTop_toBottomOf="@id/txtViatico" />

            <!-- BOTÓN Y RESULTADOS -->
            <!-- NUEVO BOTÓN DE CALCULAR CON ESTILO PERSONALIZADO -->
            <androidx.cardview.widget.CardView
                android:id="@+id/btnCalcular"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_marginTop="24dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                app:cardBackgroundColor="@color/azul"
                app:cardCornerRadius="28dp"
                app:cardElevation="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/backgroundDescuentos">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <!-- Parte blanca del icono a la derecha -->

                    <!-- Icono (puedes cambiarlo por el que quieras) -->

                    <!-- Texto del botón -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/btn_calcular"
                        android:textColor="@android:color/white"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/results_card"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:background="@drawable/background_card"
                android:padding="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btnCalcular">

                <TextView
                    android:id="@+id/txtResultadosTitulo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/titulo_resultados"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/txtBasicoLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Básico:"
                    android:textColor="@android:color/black"
                    app:layout_constraintStart_toStartOf="@id/txtResultadosTitulo"
                    app:layout_constraintTop_toBottomOf="@id/txtResultadosTitulo" />

                <TextView
                    android:id="@+id/txtBasicoValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$0"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@+id/txtBasicoLabel"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/txtBasicoLabel" />

                <TextView
                    android:id="@+id/txtAntiguedadLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Antigüedad:"
                    android:textColor="@android:color/black"
                    app:layout_constraintStart_toStartOf="@+id/txtBasicoLabel"
                    app:layout_constraintTop_toBottomOf="@+id/txtBasicoLabel" />

                <TextView
                    android:id="@+id/txtAntiguedadValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$0"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@+id/txtAntiguedadLabel"
                    app:layout_constraintEnd_toEndOf="@+id/txtBasicoValue"
                    app:layout_constraintTop_toTopOf="@+id/txtAntiguedadLabel" />

                <TextView
                    android:id="@+id/txtExtras50Label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Horas extras 50%:"
                    android:textColor="@android:color/black"
                    app:layout_constraintStart_toStartOf="@+id/txtAntiguedadLabel"
                    app:layout_constraintTop_toBottomOf="@+id/txtAntiguedadLabel" />

                <TextView
                    android:id="@+id/txtExtras50Value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$0"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@+id/txtExtras50Label"
                    app:layout_constraintEnd_toEndOf="@+id/txtAntiguedadValue"
                    app:layout_constraintTop_toTopOf="@+id/txtExtras50Label" />

                <TextView
                    android:id="@+id/txtExtras100Label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Horas extras 100%:"
                    android:textColor="@android:color/black"
                    app:layout_constraintStart_toStartOf="@+id/txtExtras50Label"
                    app:layout_constraintTop_toBottomOf="@+id/txtExtras50Label" />

                <TextView
                    android:id="@+id/txtExtras100Value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$0"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@+id/txtExtras100Label"
                    app:layout_constraintEnd_toEndOf="@+id/txtExtras50Value"
                    app:layout_constraintTop_toTopOf="@+id/txtExtras100Label" />

                <TextView
                    android:id="@+id/txtTituloSecundarioLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Título secundario:"
                    android:textColor="@android:color/black"
                    app:layout_constraintStart_toStartOf="@+id/txtExtras100Label"
                    app:layout_constraintTop_toBottomOf="@+id/txtExtras100Label" />

                <TextView
                    android:id="@+id/txtTituloSecundarioValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$0"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@+id/txtTituloSecundarioLabel"
                    app:layout_constraintEnd_toEndOf="@+id/txtExtras100Value"
                    app:layout_constraintTop_toTopOf="@+id/txtTituloSecundarioLabel" />

                <TextView
                    android:id="@+id/txtPresentismoPerfLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Presentismo perf.:"
                    android:textColor="@android:color/black"
                    app:layout_constraintStart_toStartOf="@+id/txtTituloSecundarioLabel"
                    app:layout_constraintTop_toBottomOf="@+id/txtTituloSecundarioLabel" />

                <TextView
                    android:id="@+id/txtPresentismoPerfValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$0"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@+id/txtPresentismoPerfLabel"
                    app:layout_constraintEnd_toEndOf="@+id/txtTituloSecundarioValue"
                    app:layout_constraintTop_toTopOf="@+id/txtPresentismoPerfLabel" />

                <TextView
                    android:id="@+id/txtPresentismoComplLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Presentismo compl.:"
                    android:textColor="@android:color/black"
                    app:layout_constraintStart_toStartOf="@+id/txtPresentismoPerfLabel"
                    app:layout_constraintTop_toBottomOf="@+id/txtPresentismoPerfLabel" />

                <TextView
                    android:id="@+id/txtPresentismoComplValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$0"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@+id/txtPresentismoComplLabel"
                    app:layout_constraintEnd_toEndOf="@+id/txtPresentismoPerfValue"
                    app:layout_constraintTop_toTopOf="@+id/txtPresentismoComplLabel" />

                <TextView
                    android:id="@+id/txtAsigNoRemunerativaLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Asig. no remunerativa:"
                    android:textColor="@android:color/black"
                    app:layout_constraintStart_toStartOf="@+id/txtPresentismoComplLabel"
                    app:layout_constraintTop_toBottomOf="@+id/txtPresentismoComplLabel" />

                <TextView
                    android:id="@+id/txtAsigNoRemunerativaValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$0"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@+id/txtAsigNoRemunerativaLabel"
                    app:layout_constraintEnd_toEndOf="@+id/txtPresentismoComplValue"
                    app:layout_constraintTop_toTopOf="@+id/txtAsigNoRemunerativaLabel" />

                <TextView
                    android:id="@+id/txtRefrigerioLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Refrigerio:"
                    android:textColor="@android:color/black"
                    app:layout_constraintStart_toStartOf="@+id/txtAsigNoRemunerativaLabel"
                    app:layout_constraintTop_toBottomOf="@+id/txtAsigNoRemunerativaLabel" />

                <TextView
                    android:id="@+id/txtRefrigerioValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$0"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@+id/txtRefrigerioLabel"
                    app:layout_constraintEnd_toEndOf="@+id/txtAsigNoRemunerativaValue"
                    app:layout_constraintTop_toTopOf="@+id/txtRefrigerioLabel" />

                <View
                    android:id="@+id/separator"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="8dp"
                    android:background="?android:attr/listDivider"
                    app:layout_constraintEnd_toEndOf="@+id/txtRefrigerioValue"
                    app:layout_constraintStart_toStartOf="@+id/txtRefrigerioLabel"
                    app:layout_constraintTop_toBottomOf="@id/txtRefrigerioLabel" />

                <TextView
                    android:id="@+id/txtJubilacionLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Jubilación:"
                    android:textColor="@android:color/black"
                    app:layout_constraintStart_toStartOf="@+id/separator"
