<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context=".IndemnizacionActivity">

    <!-- ScrollView para que el contenido sea desplazable -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <!-- TARJETA PARA LOS DATOS DE ENTRADA -->
            <androidx.cardview.widget.CardView
                android:id="@+id/input_card"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:background="@drawable/background_card">

                    <TextView
                        android:id="@+id/titulo_indemnizacion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/titulo_indemnizacion"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <!-- Fecha de Ingreso -->
                    <TextView
                        android:id="@+id/label_fecha_ingreso"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="@string/fecha_ingreso"
                        android:textColor="@android:color/black"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/titulo_indemnizacion" />

                    <EditText
                        android:id="@+id/et_fecha_ingreso"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:drawableEnd="@android:drawable/ic_menu_today"
                        android:focusable="false"
                        android:hint="@string/seleccionar_fecha"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/label_fecha_ingreso" />

                    <!-- Fecha de Egreso -->
                    <TextView
                        android:id="@+id/label_fecha_egreso"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="@string/fecha_egreso"
                        android:textColor="@android:color/black"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/et_fecha_ingreso" />

                    <EditText
                        android:id="@+id/et_fecha_egreso"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:drawableEnd="@android:drawable/ic_menu_today"
                        android:focusable="false"
                        android:hint="@string/seleccionar_fecha"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/label_fecha_egreso" />

                    <!-- Mejor Sueldo -->
                    <TextView
                        android:id="@+id/label_mejor_sueldo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="@string/mejor_sueldo"
                        android:textColor="@android:color/black"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/et_fecha_egreso" />

                    <EditText
                        android:id="@+id/et_mejor_sueldo"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:hint="0"
                        android:inputType="numberDecimal"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/label_mejor_sueldo" />

                    <TextView
                        android:id="@+id/label_tipo_salida"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="@string/tipo_de_salida"
                        android:textColor="@android:color/black"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/et_mejor_sueldo" />

                    <RadioGroup
                        android:id="@+id/rg_tipo_salida"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/label_tipo_salida">

                        <RadioButton
                            android:id="@+id/rb_despido_sin_causa"
                            style="@style/App.Custom.RadioButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="true"
                            android:text="@string/despido_sin_causa"
                            android:textColor="@android:color/black"/>

                        <RadioButton
                            android:id="@+id/rb_renuncia"
                            style="@style/App.Custom.RadioButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/renuncia"
                            android:textColor="@android:color/black"/>
                    </RadioGroup>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <!-- BOTÓN DE CÁLCULO -->
            <!-- BOTÓN DE CÁLCULO (CORREGIDO CON CARDVIEW PARA SOMBRA) -->
            <androidx.cardview.widget.CardView
                android:id="@+id/btn_calcular_indemnizacion"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginTop="24dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                app:cardBackgroundColor="@color/rojoclaro"
                app:cardCornerRadius="28dp"
                app:cardElevation="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/input_card">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/btn_calcular_indemnizacion"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </androidx.cardview.widget.CardView>


            <!-- TARJETA PARA LOS RESULTADOS -->
            <!-- TARJETA PARA LOS RESULTADOS (CORREGIDA) -->
            <androidx.cardview.widget.CardView
                android:id="@+id/results_card"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:visibility="gone"
                tools:visibility="visible"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btn_calcular_indemnizacion">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:background="@drawable/background_card">

                    <TextView
                        android:id="@+id/titulo_resultados_indemnizacion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/titulo_resultados_indemnizacion"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <!-- Antigüedad -->
                    <TextView
                        android:id="@+id/txtAntiguedadLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="@string/resultado_antiguedad"
                        android:textColor="@android:color/black"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/titulo_resultados_indemnizacion" />

                    <TextView
                        android:id="@+id/txtAntiguedadValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        app:layout_constraintBottom_toBottomOf="@+id/txtAntiguedadLabel"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/txtAntiguedadLabel"
                        tools:text="6 años y 5 meses" />

                    <!-- Indemnización por Antigüedad -->
                    <TextView
                        android:id="@+id/txtIndemnizacionAntiguedadLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/resultado_indemnizacion_antiguedad"
                        android:textColor="@android:color/black"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/txtAntiguedadLabel" />

                    <TextView
                        android:id="@+id/txtIndemnizacionAntiguedadValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        app:layout_constraintBottom_toBottomOf="@+id/txtIndemnizacionAntiguedadLabel"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/txtIndemnizacionAntiguedadLabel"
                        tools:text="$6,095,833" />

                    <!-- Preaviso -->
                    <TextView
                        android:id="@+id/txtPreavisoLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/resultado_preaviso"
                        android:textColor="@android:color/black"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/txtIndemnizacionAntiguedadLabel" />

                    <TextView
                        android:id="@+id/txtPreavisoValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        app:layout_constraintBottom_toBottomOf="@+id/txtPreavisoLabel"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/txtPreavisoLabel"
                        tools:text="$950,000" />

                    <!-- Aguinaldo Proporcional -->
                    <TextView
                        android:id="@+id/txtAguinaldoProporcionalLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/resultado_aguinaldo_proporcional"
                        android:textColor="@android:color/black"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/txtPreavisoLabel" />

                    <TextView
                        android:id="@+id/txtAguinaldoProporcionalValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        app:layout_constraintBottom_toBottomOf="@+id/txtAguinaldoProporcionalLabel"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/txtAguinaldoProporcionalLabel"
                        tools:text="$950,000" />

                    <!-- Vacaciones Proporcionales -->
                    <TextView
                        android:id="@+id/txtVacacionesProporcionalesLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/resultado_vacaciones_proporcionales"
                        android:textColor="@android:color/black"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/txtAguinaldoProporcionalLabel" />

                    <TextView
                        android:id="@+id/txtVacacionesProporcionalesValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        app:layout_constraintBottom_toBottomOf="@+id/txtVacacionesProporcionalesLabel"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/txtVacacionesProporcionalesLabel"
                        tools:text="$532,000" />

                    <!-- Separador -->
                    <View
                        android:id="@+id/separator"
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_marginTop="8dp"
                        android:background="?android:attr/listDivider"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/txtVacacionesProporcionalesLabel" />

                    <!-- Total Estimado -->
                    <TextView
                        android:id="@+id/txtTotalEstimadoLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/resultado_total_estimado"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/separator" />

                    <TextView
                        android:id="@+id/txtTotalEstimadoValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="@+id/txtTotalEstimadoLabel"
                        android:textColor="@android:color/black"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/txtTotalEstimadoLabel"
                        tools:text="$8,527,833" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
